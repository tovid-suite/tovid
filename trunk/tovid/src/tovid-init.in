    tovid_PREFIX=$(dirname $tovid)
    tovid_VERSION=$(grep TOVID_VERSION $tovid_PREFIX/tovid-init | \
        awk -F '"' '{print $2}')
    INSTALLED_VERS="$INSTALLED_VERS $tovid_VERSION"
done
